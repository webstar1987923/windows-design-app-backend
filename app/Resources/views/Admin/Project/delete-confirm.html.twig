{% extends 'Admin/layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'projects.pages.remove_conform' |trans({}, 'AppBundle') }} <small></small></h1>
        </div>
        <!-- /.col-lg-12 -->
        <div class="col-lg-12">
            {% include '::_flash.html.twig' %}
        </div>
    </div>

    <!-- Project section navigation -->
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('admin_projects') }}" title="{{ 'projects.description' |trans({}, 'AppBundle') }}"><i class="fa fa-list fa-fw"></i> {{ 'projects.title' |trans({}, 'AppBundle') }}</a></li>
                <li class="active">{{ 'projects.pages.remove_conform' |trans({}, 'AppBundle') }}</li>
            </ol>
        </div>
    </div><!-- /Project section navigation -->

    <div class="row">
        <div class="col-lg-12">
            <table class="records_list table">
                <caption>Project details</caption>
                <tbody>
                    <tr>
                        <th class="text-right">{{ 'projects.fields.id' |trans({}, 'Entities') }}</th>
                        <td>{{ entity.getId() }}</td>
                    </tr>
                    <tr>
                        <th class="text-right">{{ 'projects.fields.client_name' |trans({}, 'Entities') }}</th>
                        <td>{{ entity.getClientName() }}</td>
                    </tr>
                    <tr>
                        <th class="text-right">{{ 'projects.fields.client_company_name' |trans({}, 'Entities') }}</th>
                        <td>{{ entity.getClientCompanyName() }}</td>
                    </tr>
                    <tr>
                        <th class="text-right">{{ 'projects.fields.client_phone' |trans({}, 'Entities') }}</th>
                        <td>{{ entity.getClientPhone() }}</td>
                    </tr>
                    <tr>
                        <th class="text-right">{{ 'projects.fields.client_email' |trans({}, 'Entities') }}</th>
                        <td>{{ entity.getClientEmail() }}</td>
                    </tr>
                    <tr>
                        <th class="text-right">{{ 'projects.fields.client_address' |trans({}, 'Entities') }}</th>
                        <td>{{ entity.getClientAddress() }}</td>
                    </tr>
                    <tr>
                        <th class="text-right">{{ 'projects.fields.project_name' |trans({}, 'Entities') }}</th>
                        <td>{{ entity.getProjectName() }}</td>
                    </tr>
                    <tr>
                        <th class="text-right">{{ 'projects.fields.project_address' |trans({}, 'Entities') }}</th>
                        <td>{{ entity.getProjectAddress() }}</td>
                    </tr>
                </tbody>
            </table>

            <form action="{{ path('admin_projects_delete', {'id': entity.getId()}) }}" method="post">
                <button type="submit" class="btn btn-danger">
                    <i class="glyphicon glyphicon-minus-sign"></i>
                    {{ 'actions.confirm_delete' |trans({}, 'AppBundle') }}
                </button>
                <a href="{{ path('admin_projects') }}" class="btn btn-default">
                    <i class="glyphicon glyphicon-remove-sign"></i>
                    {{ 'actions.cancel' |trans({}, 'AppBundle') }}
                </a>
            </form>

        </div>
    </div>

{% endblock %}
